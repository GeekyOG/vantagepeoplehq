{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"],
            "@ui/*": ["./components/ui/*"],
            "@fonts/*": ["./components/fonts/*"],
            "@lib/*": ["./lib/*"],
            "@assets/*": ["./assets/*"]
        },
        "target": "ES2015",
        "types": ["node"]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "app/dashboard/core/product-management/products/_components/motor-detail",
        "app/dashboard/finance/receivables-payables/[id]/_components/SideProducttsx"
    ],
    "exclude": ["node_modules", "**/*.min.mjs"]
}
